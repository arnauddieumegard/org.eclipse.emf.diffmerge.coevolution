<plugin>
  <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.emf.diffmerge.bridge.examples.apa2capella.Apa2CapellaBridgeHandler"
            description="Generate Capella Model from APA Model"
            id="org.eclipse.emf.diffmerge.bridge.example.ui.command"
            name="Generate Capella Model from APA model">
      </command>
   </extension>
   <extension
        point="org.eclipse.ui.menus">
     <menuContribution
           allPopups="false"
           locationURI="popup:org.eclipse.ui.popup.any?after=additions">
        <command
              commandId="org.eclipse.emf.diffmerge.bridge.example.ui.command"
              label="APA-to-Capella Bridge"
              style="push">
     	 <visibleWhen
       		checkEnabled="false">
		   <with variable="activeMenuSelection">
		      <iterate
		           ifEmpty="false">
		         <adapt type="org.eclipse.core.resources.IResource">
		              <test property="org.eclipse.core.resources.extension" value="apa" />
		         </adapt>
		      </iterate>
		   </with>
		</visibleWhen>
        </command>
     </menuContribution> 
  </extension>
</plugin>
